<h1>Listing measurements</h1>

<table>
  <thead>
    <tr>
      <th>Glucose Level</th>
      <th>Measured at</th>
      <th>Retrieved at</th>
      <th>Code Number</th>
      <th>Reading Type</th>
      <th>Communication Device</th>
      <th>Meter</th>
      <th>Patient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @measurements.each do |measurement| %>
      <tr>
        <td><%= measurement.glucose_value %></td>
        <td><%= link_to 'Show', measurement %></td>
        <td><%= link_to 'Edit', edit_measurement_path(measurement) %></td>
        <td><%= link_to 'Destroy', measurement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

