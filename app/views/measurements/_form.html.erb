<%= simple_form_for(@measurement) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <label for="title"><%= f.label :glucose_value %></label>
    <%= f.number_field :glucose_value, :class => "form-control", :placeholder => "Enter glucose value"  %>
  </div>

  <div class="form-group">
    <label for="title"><%= f.label :measured_at %></label>
    <%= f.datetime_select :measured_at, :class => "form-control", :placeholder => "Enter measured_at"  %>
  </div>

  <div class="form-group">
    <label for="title"><%= f.label :retrieved_at %></label>
    <%= f.datetime_select :retrieved_at, :class => "form-control", :placeholder => "Enter retrieved_at"  %>
  </div>

  <div class="form-group">
    <label for="title"><%= f.label :code_number %></label>
    <%= f.number_field :code_number, :class => "form-control", :placeholder => "Enter code number"  %>
  </div>

  <div class="form-group">
    <label for="title"><%= f.label :reading_type %></label>
    <%= f.text_field :reading_type, :class => "form-control", :placeholder => "Enter reading type"  %>
  </div>

  <div class="form-group">
    <label for="title"><%= f.label :meter_id %></label>
    <%= f.text_field :meter_id, :class => "form-control", :placeholder => "Enter meter id"  %>
  </div>

  <div class="form-group">
    <label for="title"><%= f.label :case_manager_id %></label>
    <%= f.text_field :case_manager_id, :class => "form-control", :placeholder => "Enter case manager id"  %>
  </div>

  <div class="form-group">
    <label for="title"><%= f.label :user_id %></label>
    <%= f.text_field :user_id, :class => "form-control", :placeholder => "Enter user id"  %>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
