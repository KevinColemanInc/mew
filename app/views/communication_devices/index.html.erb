<div ng-controller="CommunicationDevicesTableCtrl">
  <h1>Communication Devices</h1>

  <div class="row">
    <div class="col-md-8">
      <input type="search" ng-model="filter.$" class="form-control" />
    </div>
    <div class="col-md-2 col-md-offset-2">
      <button ng-click="tableParams.sorting({})" class="btn btn-default">Clear sorting</button>
    </div>
  </div>

  <table class='table' ng-table="tableParams">
    <tbody>
        <tr ng-repeat="communication_device in $data">
          <td data-title="'Device ID'" sortable="'cdid'">{{communication_device.cdid}}</td>
          <td data-title="'Phone Number'">{{communication_device.phone_number}}</td>
          <td data-title="'Device Type'" sortable="'device_type'">{{communication_device.device_type}}</td>
          <td data-title="'Device Model'" sortable="'device_model'">{{communication_device.device_model}}</td>
          <td data-title="'Created At'" sortable="'created_at'">{{communication_device.created_at}}</td>
          <td data-title="'Last Communication'" sortable="'last_communicated_at'">{{communication_device.last_communicated_at}}</td>
          <td data-ng-bind-html="communication_device.links.manage_members"></td>
          <td data-ng-bind-html="communication_device.links.show"></td>
          <td data-ng-bind-html="communication_device.links.edit"></td>
        </tr>
    </tbody>
  </table>
  <p><strong>Total communication devices:</strong> {{tableParams.total()}}</p>
</div>
<br>

<%= link_to 'New Communication device', new_communication_device_path %>
