<div ng-controller="MembersTableCtrl" ng-cloak>
  <div class="row">
    <div class="col-md-6">
      <h1><i class="fa fa-user"></i> Members</h1>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <input type="search" ng-model="filter.$"class="search-box form-control width-auto" />
      </div>
    </div>
  </div>

  <table class='table table-hover table-condensed' ng-table="tableParams">
    <tbody>
        <tr ng-repeat="member in $data">
          <td data-title="'Name'" sortable="'name'" data-ng-bind-html="member.links.show"></td>
          <td data-title="'Member ID'" sortable="'email'">{{member.mid}}</td>
          <td data-title="'Total Measurements'" sortable="'measurement_count'" data-ng-bind-html="member.links.measurement_count"></td>
          <td data-title="'Measurements in the last 28 days'" sortable="'measurement_count_last_28_days'">{{member.measurement_count_last_28_days}}</td>
        </tr>
    </tbody>
  </table>
  <p><strong>Total members:</strong> {{tableParams.total()}}</p>
</div>

<br>

<%= link_to 'New Member', new_member_path if current_user.has_role? :case_manager_admin  %>
