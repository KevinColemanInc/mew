<div ng-controller="MembersTableCtrl">
  <h1>Members</h1>

  <div class="row">
    <div class="col-md-6">
      <input type="search" ng-model="filter.$" class="form-control" />
    </div>
  </div>

  <table class='table' ng-table="tableParams">
    <tbody>
        <tr ng-repeat="member in $data">
          <td data-title="'Name'" sortable="'name'">{{member.name}}</td>
          <td data-title="'Member Number'" sortable="'email'">{{member.mid}}</td>
          <td data-title="'Total Measurements'" sortable="'measurement_count'" data-ng-bind-html="member.links.measurement_count"></td>
          <td data-title="'Measurements in the last 28 days'" sortable="'measurement_count_last_28_days'">{{member.measurement_count_last_28_days}}</td>
          <td data-ng-bind-html="member.links.show"></td>
          <td data-ng-bind-html="member.links.edit"></td>
          <td data-ng-bind-html="member.links.destroy"></td>
        </tr>
    </tbody>
  </table>
  <p><strong>Total members:</strong> {{tableParams.total()}}</p>
</div>

<br>

<%= link_to 'New Member', new_member_path if current_user.has_role? :case_manager_admin  %>
