<div ng-controller="CaseManagersTableCtrl" ng-cloak>
  <div class="row">
    <div class="col-md-6">
      <h1><i class="fa fa-user-md"></i> Case Managers</h1>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label class="col-md-1 control-label search-label">Find</label>
        <div class="col-md-10">
          <input type="search" ng-model="filter.$" class="form-control search-box" />
        </div>
      </div>
    </div>
  </div>
  <table class='table table-hover table-condensed' ng-table="tableParams">
    <tbody>
        <tr ng-repeat="case_manager in $data">
          <td data-title="'Name'" sortable="'full_name'" data-ng-bind-html="case_manager.links.show"></td>
          <td data-title="'Email'" sortable="'email'">{{case_manager.email}}</td>
          <td data-title="'Phone Number'">{{case_manager.phone_number}}</td>
          <td data-title="'Members Managed'" sortable="'managed_members_length'" data-ng-bind-html="case_manager.links.managed_members"></td>
        </tr>
    </tbody>
  </table>
  <p><strong>Total case managers:</strong> {{tableParams.total()}}</p>
</div>
<br>

<%= link_to 'New Case manager', new_case_manager_path if current_user.is_a? CaseManager  %>
