<h1>Listing Case Managers</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Members Managed</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @case_managers.each do |case_manager| %>
      <tr>
        <td><%= case_manager.name %>
          <% if case_manager.has_role? :case_manager_admin %>
          <span class="label label-danger">Admin</span>
          <% end %>
          <% if case_manager.archived? %>
          <span class="label label-info">Archived</span>
          <% end %>
        </td>
        <td><%= case_manager.email %></td>
        <% unless case_manager.has_role? :case_manager_admin %>
        <td><%= case_manager.managed_members.length %></td>
        <td><%= link_to 'Manage Members', case_manager_managed_members_path(case_manager) %></td>
        <% else %>
        <td></td>
        <td></td>
        <% end %>
        <td><%= link_to 'Show', case_manager %></td>
        <td><%= link_to 'Edit', edit_case_manager_path(case_manager) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

