<h1>Listing patients</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Signin Count</th>
      <th>Last sign in</th>
      <th>Created At</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.email %></td>
        <td><%= patient.sign_in_count %></td>
        <td><%= datetime_to_string patient.last_sign_in_at %></td>
        <td><%= datetime_to_string patient.created_at %></td>
        <td><%= link_to 'Show', patient %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

