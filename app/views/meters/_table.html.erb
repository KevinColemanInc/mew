<div ng-controller="MetersTableCtrl" ng-cloak>
    <div class="row">
    <div class="col-md-6">
      <h1><i class="fa fa-tachometer"></i> Meters</h1>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label class="col-md-1 control-label search-label">Find</label>
        <div class="col-md-10">
          <input type="search" ng-model="filter.$" class="form-control search-box" />
        </div>
      </div>
    </div>
  </div>

  <table class='table table-hover table-condensed' ng-table="tableParams">
    <tbody>
        <tr ng-repeat="meter in $data">
          <td data-title="'Meter ID'" sortable="'mid'" data-ng-bind-html="meter.links.show"></td>
          <td data-title="'Bluetooth Mac'" sortable="'bluetooth_mac'">{{meter.bluetooth_mac}}</td>
        </tr>
    </tbody>
  </table>
  <p><strong>Total meters:</strong> {{tableParams.total()}}</p>
</div>